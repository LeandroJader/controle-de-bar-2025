@using ControleDeBar.WebApp.Models
@using static ControleDeBar.WebApp.Models.CadastrarProdutoViewModel

@model VisualizarProdutoViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Produtos";
}

<p>
    <a class="btn btn-primary px-4 rounded-4" href="/produtos/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.registros)
    {
        <div class="col-12 col-md-3">
            <div class="card rounded-4 border-0">
                <div class="card-body">
                    <h5 class="card-title">@item.Id</h5>
                    <p class="card-text"><span class="fw-semibold">Nome  :</span>@item.Nome</p>
                    <p class="card-text"><span class="fw-semibold">Preço :</span>@item.Preco</p>

                    <span class="d-flex gap-1 justify-content-end mt-4">
                   
                        <a href="/produtos/editar/@item.Id" class="btn btn-primary rounded-circle opcao-card">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/produtos/excluir/@item.Id" class="btn btn-danger rounded-circle opcao-card">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>